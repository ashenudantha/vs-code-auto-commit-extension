{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", ".vscode-test", "vite.config.ts"]
}
